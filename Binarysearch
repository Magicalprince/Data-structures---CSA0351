#include<stdio.h>
int main(){
	int i,j,n,s,a[100],mid,high,low;
	printf("Enter the total no. of elements : ");
	scanf("%d", &n);
	printf("Enter the array elements in ascending order : ");
	for(i=0; i<n; i++)
	{
		scanf("%d", &a[i]);
	}
	printf("Enter the search element : ");
	scanf("%d", &s);
	high=n-1;
	low=0;
	mid=high+low/2;

	while(low<=high)
	{
		if(a[mid]==s)
		{
			printf("Search element is found at index %d", mid);
			break;
		}
		else if(a[mid]<s)
		{
			low=mid+1;
		}
		else if(a[mid]>s)
		{
			high=mid-1;
		}
		
		mid=high+low/2;
	}
	return 0;
}
